mixin sidebar
  aside.sidebar
    .sidebar__container
      .sidebar__logo
        img.sidebar__logo-sign(src="images/logo/sign.svg", alt="")
        img.sidebar__logo-text(src="images/logo/text.svg", alt="")
      .sidebar__tabs 
        +tabs_item('Каталог', 'catalog', true)
        +tabs_item('Здоровье', 'health')
        +tabs_item('Красота', 'beauty')
        +tabs_item('Развлечения', 'enjoy')
        +tabs_item('Авто', 'car')
      button.sidebar__menu
        img.sidebar__menu-burger.sidebar__menu-img(src="images/menu/burger.svg", alt="")
        img.sidebar__menu-exit.sidebar__menu-img(src="images/menu/exit.svg", alt="")

mixin tabs_item(title, tab_name, is_active=false)
  button.tab(class='tab-' + tab_name + ( is_active ? ' tab--active' : ''))
    if is_active
      .tab__pointer.tab__pointer--active
    else 
      .tab__pointer 
