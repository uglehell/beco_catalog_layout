mixin coupon(title, desc, sentence, sentence_info, index)
  .coupon
    .coupon__info
      .coupon__title= title
      .coupon__desc= desc
      h2.coupon__sentence= sentence
      .coupon__sentence-info= sentence_info
    img.coupon__img(src='images/cards/coupon_' + index + '.png', alt='')